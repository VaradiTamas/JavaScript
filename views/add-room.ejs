<%- include('header') -%>
<%- include('menu', {active: 'szoba'}) -%>

<form method="POST">
    <div class="row">
        <div class="col-2 m-3">
            <label class="me-2" for="name">Szoba neve: </label>
        </div>
        <div class="col-4 m-3">
            <input type="text" id="name" name="name">
        </div>
    </div>

    <div class="row">
        <div class="col-2 m-3">
            <label for="capacity">Férőhely nagysága:  </label>
        </div>
        <div class="col-4 m-3">
            <input type="number" id="capacity" value="2" name="capacity" min="1" max="4">
        </div>
    </div>

    <div class="row">
        <div class="col-2 m-3">
            <a class="ms-4 mt-5 btn btn-secondary" href="/admin/rooms">Mégsem</a>
        </div>
        <div class="col-2 m-3">
            <input type="submit" class="ms-4 mt-5 btn btn-success" value="Mentés"/>
        </div>
    </div>
</form>

<%- include('footer') -%>
