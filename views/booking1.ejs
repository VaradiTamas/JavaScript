<%- include('header') -%>
<form method="POST">
    <div class="row">
        <div class="col-4 m-3">
            <label class="me-2" for="from">Erkezes:   </label>
            <input #from type="date" id="from" name="from" max="2022-12-31" required>
        </div>
        <div class="col-3 m-3">
            <label for="people">Emberek szama:  </label>
            <input type="number" id="people" value="2" name="numOfPeople" min="1" max="4">
        </div>
    </div>
    <div class="row">
        <div class="col-4 m-3">
            <label class="me-2" for="to">Tavozas:</label>
            <input #to type="date" id="to" name="to" max="2022-12-31" required>
        </div>
        <div class="col-4 m-3">
            <input type="submit" class="btn btn-success" value="Szabad szoba ellenőrzése"/>
        </div>
    </div>
</form>
<%- include('footer') -%>
